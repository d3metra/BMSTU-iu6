program Lab8;
{$APPTYPE CONSOLE}

uses
  System.SysUtils;

type zap = record
              Book: string[50];
              Avtor: string[50];
              Data: word
           end;
var F, G: file of zap;
    z: zap;
    i, n: integer;

begin
//Создание исходного файла F с записями//
assign (F, 'F.dat');
rewrite (F);
write ('Введите n<=15 - кол-во записей в файле F: ');
readln (n);
for i := 1 to n do
   begin
        writeln ('Запись ', i);
        with z do
            begin
                 write ('Название книги: ');
                 readln (Book);
                 write ('Автор книги: ');
                 readln (Avtor);
                 write ('Год издания книги: ');
                 readln (Data)
            end;
        write (f,z);
   end;

//Вывод записей, содержащихся в файле F//
writeln ('Данные файла F:');
reset (F);
i := 0;
while not EOF(F) do
     begin
          i := i + 1;
          read (F,z);
          writeln ('(', i, ')  ', z.Book, '    ', z.Avtor, '   ', z.Data);
     end;
Readln;
end.
