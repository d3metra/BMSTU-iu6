program DZ2_nomer2;
{$APPTYPE CONSOLE}

uses
  System.SysUtils;

var a: array[1..8, 1..8] of integer;
    i, i_min, j, j_min, cnt, S: integer;

begin
{Генерация и вывод матрицы}
randomize;
for i := 1 to 8 do
   for j := 1 to 8 do
      a[i,j] := random(201) - 100;
writeln ('Исходная матрица:');
for i := 1 to 8 do
   begin
        for j := 1 to 8 do
           write ('a[', i, ',', j,'] = ', a[i,j]:3, '     ');
        writeln;
   end;

{Поиск минимального значения выше главной диагонали}
i_min := 1;
j_min := 2;
for i := 1 to 7 do
   for j := i + 1 to 8 do
      if a[i,j] < a[i_min,j_min]
        then begin
                  i_min := i;
                  j_min := j;
             end;
write ('Минимальное значение выше главной диагонали: ');
writeln ('a[', i_min, ',', j_min,'] = ',a[i_min,j_min]:3);

{Нахождение произведения элементов ниже главной диагонали, меньших min}
write ('Элементы ниже главной диагонали, ' +
       'меньших минимального элемента выше главной диагонали: ');
S := 1;
cnt := 0;
for i := 2 to 8 do
   for j := 1 to i - 1 do
      if a[i,j] < a[i_min,j_min]
        then begin
                  cnt := cnt + 1;
                  S := S * a[i,j];
                  write ('a[', i, ',', j,'] = ', a[i,j]:3, '     ');
             end;
writeln;

{Вывод}
if cnt > 0
  then write ('Прозведение данных элементов :', S)
  else write ('Ниже главное диагонали нет элементов,' +
              'меньших минимальное элемента выше главной диагонали');
readln;
end.
